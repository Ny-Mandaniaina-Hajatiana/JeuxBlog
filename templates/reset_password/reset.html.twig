{% extends 'layouts/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-3 text-center">Réinitialiser votre mot de passe</h1>
    <div class="row">
        <div class="col-md-6 mx-auto">
                
            {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <button type="submit" class="btn" style="background-color:#dc3545;color:white;">Réinitialiser le mot de passe</button>
            {{ form_end(resetForm) }}

        </div>
    </div>

    
{% endblock %}
