{% extends 'layouts/base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-6 mx-auto rounded shadow-lg">
                {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1 class="my-5 text-center">S'authentifier</h1>

            {{ form_start(registrationForm) }}

                <div class="row">
                    <div class="col-md-6">
                            {{ form_row(registrationForm.firstName, {
                                                label: 'Votre Prénom'
                                            }) }}
                    </div>
                    <div class="col-md-6">
                            {{ form_row(registrationForm.lastName, {
                            label: 'Votre Nom'
                        }) }}   
                    </div>
                </div>                
                
                {{ form_row(registrationForm.email, {
                    label: 'Votre e-mail'
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-lg btn-center" style="background-color:#dc3545;color:white;margin-left:30%;">S'authentifier</button>

                        <p class="mt-5 mb-3 text-center text-muted">
                                Vous avez déjà un compte <a href="{{ path('app_login') }}" class="text-decoration-none" style="color:#dc3545;">Se connecter</a>
                        </p><br>

            {{ form_end(registrationForm) }}    
        </div>
    </div>
    

   
    
{% endblock %}
